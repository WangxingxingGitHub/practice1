//              使用while循环
#include<stdio.h>

int main()
{
	int i = 1;
	int n = 0;
	int ret = 1;
	scanf("%d",&n);
	while(i<=n)
	{
		ret *= i;
		i++;
	}
	printf("%d的阶乘=%d",n,ret);
	return 0;
}
//-------------------------------
//              使用for循环
#include<stdio.h>

int main()
{
	int i = 0;
	int n = 0;
	int ret = 1;
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
		ret *= i;
	}
	printf("%d的阶乘=%d",n,ret);
	return 0;
}

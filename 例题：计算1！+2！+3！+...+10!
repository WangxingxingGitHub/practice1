//                使用while循环
#include<stdio.h>

int main()
{
	int i = 1;
	int ret = 1;
	int sum = 0;
	while(i<=10)
	{
		ret *= i;
		sum +=ret;
		i++;
	}
	printf("1!+2!+3！+...+10!=%d",sum);
	return 0;
}
//-------------------------------------
//                 使用for循环
#include<stdio.h>

int main()
{
	int i = 0;
	int ret = 1;
	int sum = 0;
	for(i=1;i<=10;i++)
	{
		ret *= i;
		sum +=ret;
	}
	printf("1!+2!+3！+...+10!=%d",sum);
	return 0;
}

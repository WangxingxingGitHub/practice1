//                                                    while循环语句
#include<stdio.h>
int main()
{
	int i = 0;
	while(i<10)
	{
		if(5 == i)
		{
			//continue;//break;
		}
		printf("%d ",i);
		i++;
	}
	return 0;
}

//getcha和putchar的使用
//getchar获取一个字符存入到变量中
//putchar把获取的字符打印输出
//输入：ctrl+z+回车 getchar获得一个EOF
#include<stdio.h>
int main()
{
	int ch = 0;
	while((ch=getchar()) != EOF)
	{
		putchar(ch);
	}
	return 0;
}

#include<stdio.h>
int main()
{
	int ret = 0;
	char password[20] = {0};
	printf("请输入你的密码\n");
	scanf("%s",password);
	getchar（）;   //getchar用来把输入缓冲区字符串后面的\n取走
	printf("请确定（Y/N）:");
	ret = getchar();
	if(ret == 'Y')
		printf("确认成功\n");
	else if(ret == 'N')
		printf("确认失败\n");
	return 0;
}
